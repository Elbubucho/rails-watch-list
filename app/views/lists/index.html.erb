
<div class="container">
  <div class="container my-4">
    <h2 class="text-center">Mes listes</h2>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
        <div class="col-md-4 mb-4">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://conwayyao.com/wp-content/uploads/2015/07/Cinema_Banner.jpeg' %>)">
              <h2>
                <%= list.name %>
              </h2>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
